  <body>
    <div id="page-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">
              Messages
            </h1>
            <ol class="breadcrumb">
              <li>
                <i class="fa fa-dashboard"></i>  <a href="/">Dashboard</a>
              </li>
              <li class="active">
                <i class="fa fa-fw fa-desktop"></i> Messages
              </li>
            </ol>
          </div>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6 text-center">
          <h3>Received messages</h3>
          <%= render "messages/partials/receive_messages", local: { messages: @messages } %>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6 text-center">
          <h3>Sent Messages</h3>
          <%= render "messages/partials/sent_messages", local: { sent_messages: @sent_messages } %>
        </div>
      </div>
    </div>
  </body>
