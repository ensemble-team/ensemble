<% @notifications = Notification.where({user_id: current_user.id}) %>
<% array = []  %>
<% @notifications.each do |n|  %>
  <% if n.read == nil  %>
    <% array << n  %>
  <% end %>
<% end %>


<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= array.count%> <i class="fa fa-bell"></i><b class="caret"></b></a>
    <ul class="dropdown-menu alert-dropdown" style="max-height:300px;overflow-y:scroll;">
      <% array.each do |n|  %>
      <% f = n.notified_by %>
      <% sender = User.find(f) %>

        <% if n.owner_type == "Track" %>
          <% s = 'label label-info' %>
        <% elsif n.owner_type == "Message" %>
          <% s = 'label label-warning' %>
        <% elsif n.owner_type == "Request" %>
          <% s = 'label label-success' %>
        <% elsif n.owner_type == "Approve Collab" %>
          <% s = 'label label-danger' %>
        <% elsif n.owner_type == "Branch" %>
          <% s = 'label label-primary' %>
        <% end %>

        <li>
            <a href="<%= notification_link_through_path(n) %>"><%= sender.username %> <br><span class="<%= s %>"> New <%= n.owner_type %> </span></a>
        </li>
        <li class="divider"></li>

        <% end %>

        <li>
            <a href="/user/notifications">View All</a>
        </li>
    </ul>
</li>

