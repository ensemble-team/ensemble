<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Ensemble</a>
        </div>
        <!-- Top Menu Items -->

        <ul class="nav navbar-right top-nav">
          <% if user_signed_in? %>
            <%= render "layouts/partials/layouts_messages_dropdown", locals: { messages: @messages } %>
            <%= render "layouts/partials/layouts_notifications_dropdown", locals: { messages: @messages } %>
            <%= render "layouts/partials/layouts_profile_dropdown", locals: { users: @users} %>
          <% else %>
            <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
            <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
            <li><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %></li>
          <% end %>
        </ul>
          <%= render "layouts/partials/layouts_left_navbar" %>
    </nav>
  <%= yield %>
