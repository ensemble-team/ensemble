<% if @project.user_id == current_user.id %>
  <%= button_to 'Delete Project', project_path(@project), method: :delete, data: {confirm: 'Are you sure you want to delete this project?'} %>
  <h2>Upload Your Master Track</h2>

  <%= simple_form_for ([@project, @project.tracks.build]) do |t| %>
    <%= t.hidden_field :user_id, :value => current_user.id %>
    <%= t.input :title, placeholder: 'Track Title', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= t.input :text, placeholder: 'Track Description', wrapper_html: { class: 'form-group' }, input_html: { class: 'form-control' } %>
    <%= t.file_field :avatar %><br>
    <%= t.button :submit, button_html: { value: 'Upload Track' } %><br>
  <% end %>

<% end %>
