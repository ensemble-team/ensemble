<% if @projects.count != 0 %>
  <% @projects.each do |project| %>
    <div class="col-lg-12 col-md-12 col-sm-12" style="padding-left:0px;">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="row">
            <ul style="list-style:none;padding-left:10px;">
                  <li><%= project.title %><br>
                  <%= project.description %><br>
                  <small style="color:#e6e6e6;">Created: <%= project.created_at.strftime("%d/%m/%Y") %></small>
          </div>
        </div>
                    <a href="/projects/<%= project.id%>">
                      <div class="panel-footer">
                        <span class="pull-left">View Project</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                    </a>
                  </li>
            </ul>
      </div>
    </div>
  <% end %>
<% else %>
  <% if @user.id == current_user.id %>
    You are not working on any projects at the moment.
  <% else %>
    <%= @user.username %> is not working on any projects at the moment.
  <% end %>
<% end %>
