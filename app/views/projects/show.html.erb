
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%= @project.title %>
    <%= @project.genre %>
    <%= @project.description %>

    <%= simple_form_for ([@project, @project.tracks.build]) do |t| %>
      <%= t.input :title, placeholder: 'Track Title' %>
      <%= t.input :text, placeholder: 'Track Description' %>
      <%= t.file_field :avatar %>
      <%= t.button :submit, button_html: { value: 'Upload Track' } %>
    <% end %>

    <% if @project.tracks.count != 0%>

    <% @project.tracks.each do |track| %>
    <% if track.title != nil %>
      <audio controls>
        <source src="<%=audio_path track.avatar%>" type="audio/mpeg"></source>
      </audio>
      <a href="<%=track.avatar%>" download="Song">Download</a><br>
      <%= link_to 'Remove track', project_track_path(@project, track), method: :delete, data: {confirm: 'Are you sure you would like to delete this track?'} %>
    <% end %>
    <% end %>
    <% end %>

  </body>


</html>
